{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./src",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "paths": {
      "@services/*": ["app/library/services/*"],
      "@elements/*": ["app/library/elements/*"],
      "@components/*": ["app/library/components/*"],
      "@store/*": ["app/library/store/*"],
      "@lib/*": ["app/library/*"],
      "@root/*": ["app/*"]
    }
  }
}
